#!/usr/bin/ruby

require "rubygems"
require "active_resource"
require "shelltoad"

command = ARGV.shift

case command
when "errors", "ers", nil
  ShellToad::Error.find(:all).each do |error|
    unless error.rails_env == "development"
      puts error.to_s
    end
  end
when "error", /^[\d]/
  puts ShellToad::Error.magic_find(ARGV.shift) || "Not found"
when "commit"
  if error = ShellToad::Error.magic_find(ARGV.shift)
    message = <<-EOI.gsub(/`/, "'")
#{Hoptoad.site}/errors/#{error.id}

#{error.error_message}
EOI
    puts `git commit -m "#{message}"`
  else
    puts "Not Found"
  end

end

